<!-- Modal -->
<div class="modal fade" id="modalFormNewTeam" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="TituloModalCentralizado">Criar nova turma</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% @new_team = Team.new %>
      <%= form_for @new_team, url: new_team_path do |f| %> 
          <div class="modal-body">
            <%= f.hidden_field(:user_id, :value => current_user.id) %>
            <div class = "form-group">
                Insira um nome para turma:
                <%= f.text_field :name,  class: "form-control form-control-sm", placeholder: "Ex.: Turma da Noite do Núcleo de Educação Física"%>
            </div>
            
            <div class = "form-group">
                Se quiser, deixe uma observação:
                <%= f.text_area :obs, class: "form-control form-control-sm", placeholder: "Observações" %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success">Salvar</button>
          </div>
      <% end %>
    </div>
  </div>
</div>